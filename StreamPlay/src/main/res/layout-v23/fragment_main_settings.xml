<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/optionListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <!-- Title with Save Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Plugin Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/saveIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_save"
            android:contentDescription="Save Settings" />
    </LinearLayout>

    <!-- Login Option Card (Clickable with Ripple) -->
    <LinearLayout
        android:id="@+id/loginCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="#1E1E1E"
        android:elevation="4dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Febbox Login"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Feature Toggle Option Card (Clickable with Ripple) -->
    <LinearLayout
        android:id="@+id/featureCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="#1E1E1E"
        android:elevation="4dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/featureText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toggle Extensions"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
